@model Employee

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<h2>Chi tiết nhân viên</h2>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Tên</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Vị trí</dt>
            <dd class="col-sm-9">@Model.Position</dd>

            <dt class="col-sm-3">Tuổi</dt>
            <dd class="col-sm-9">@Model.Age</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Chỉnh sửa</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>